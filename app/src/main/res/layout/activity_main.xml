<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llCerchio"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/my_shape"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBarA"
        style="@android:style/Widget.SeekBar"
        android:layout_width="263dp"
        android:layout_height="35dp"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="25dp"
        android:alpha="255"
        android:max="255"
        android:progress="255"
        android:progressDrawable="@drawable/progress_alpha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <SeekBar
        android:id="@+id/seekBarR"
        style="@android:style/Widget.SeekBar"
        android:layout_width="263dp"
        android:layout_height="35dp"
        android:layout_marginTop="420dp"
        android:layout_marginBottom="25dp"
        android:alpha="255"
        android:max="255"
        android:progress="255"
        android:progressDrawable="@drawable/progress_red"
        app:layout_constraintBottom_toTopOf="@+id/seekBarG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />

    <SeekBar
        android:id="@+id/seekBarG"
        style="@android:style/Widget.SeekBar"
        android:layout_width="263dp"
        android:layout_height="35dp"
        android:layout_marginTop="480dp"
        android:layout_marginBottom="25dp"
        android:alpha="255"
        android:max="255"
        android:progress="255"
        android:progressDrawable="@drawable/progress_green"
        app:layout_constraintBottom_toTopOf="@+id/seekBarB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <SeekBar
        android:id="@+id/seekBarB"
        style="@android:style/Widget.SeekBar"
        android:layout_width="263dp"
        android:layout_height="35dp"
        android:layout_marginTop="540dp"
        android:layout_marginBottom="25dp"
        android:alpha="255"
        android:max="255"
        android:progress="255"
        android:progressDrawable="@drawable/progress_blue"
        app:layout_constraintBottom_toTopOf="@+id/seekBarA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="63dp"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="23dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/seekBarR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llCerchio">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:text="R" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/textView"
            android:layout_marginLeft="50dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:text="G" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/textView2"
            android:layout_marginLeft="50dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:text="B" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/textView3"
            android:layout_marginLeft="50dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:text="A" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>